<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_edit_profile_pic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_profile_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                app:civ_border_color="@color/black"
                app:civ_border_width="2dp"
                />

            <TextView
                android:id="@+id/tv_change_profile_pic"
                android:layout_below="@+id/civ_edit_profile_pic"
                android:layout_centerHorizontal="true"
                android:text="Change Photo"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--username section-->
            <RelativeLayout
                android:id="@+id/rel_username"
                android:layout_marginTop="80dp"
                android:background="@drawable/grey_border_bottom"
                android:layout_below="@+id/tv_change_profile_pic"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:src="@drawable/ic_profile"
                    android:layout_centerVertical="true"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />

                <EditText
                    android:id="@+id/et_username"
                    android:layout_marginStart="40dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="Username"
                    android:inputType="textNoSuggestions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </RelativeLayout>


            <!--Display name section-->
            <RelativeLayout
                android:id="@+id/rel_display_name"
                android:layout_below="@+id/rel_username"
                android:layout_marginTop="15dp"
                android:background="@drawable/grey_border_bottom"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:src="@drawable/ic_display_name"
                    android:layout_centerVertical="true"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />

                <EditText
                    android:id="@+id/et_display_name"
                    android:layout_marginStart="40dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="Display Name"
                    android:inputType="textNoSuggestions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </RelativeLayout>


            <!--Website name section-->
            <RelativeLayout
                android:id="@+id/rel_website"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/rel_display_name"
                android:background="@drawable/grey_border_bottom"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:src="@drawable/ic_website"
                    android:layout_centerVertical="true"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />

                <EditText
                    android:id="@+id/et_website"
                    android:layout_marginStart="40dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="Website"
                    android:inputType="textNoSuggestions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </RelativeLayout>


            <!--Discription section-->
            <RelativeLayout
                android:id="@+id/rel_description"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/rel_website"
                android:background="@drawable/grey_border_bottom"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:src="@drawable/ic_description"
                    android:layout_centerVertical="true"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />

                <EditText
                    android:id="@+id/et_description"
                    android:layout_marginStart="40dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="Description"
                    android:inputType="textNoSuggestions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </RelativeLayout>


            <TextView
                android:id="@+id/tv_private_information"
                android:text="PRIVATE INFORMATION"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:layout_below="@+id/rel_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_border_bottom"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"/>


            <!--Email section-->
            <RelativeLayout
                android:id="@+id/rel_email"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/tv_private_information"
                android:background="@drawable/grey_border_bottom"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:src="@drawable/ic_email"
                    android:layout_centerVertical="true"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_marginStart="40dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="Email"
                    android:inputType="textNoSuggestions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            <!--Phone section-->
            <RelativeLayout
                android:id="@+id/rel_phone"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/rel_email"
                android:background="@drawable/grey_border_bottom"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:src="@drawable/ic_phone"
                    android:layout_centerVertical="true"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />

                <EditText
                    android:id="@+id/et_phone_number"
                    android:layout_marginStart="40dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="Phone number"
                    android:inputType="textNoSuggestions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </RelativeLayout>


        </RelativeLayout>


    </ScrollView>

</merge>